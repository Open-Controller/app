<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.OpenController" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blueA400</item>
        <item name="colorPrimaryVariant">@color/blueA700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal200</item>
        <item name="colorSecondaryVariant">@color/teal200</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="background">@color/blueGrey50</item>
        <item name="android:background">?attr/background</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/background</item>
        <item name="android:navigationBarColor" tools:targetApi="l">?attr/background</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
    <style name="Theme.OpenController.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.OpenController.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.OpenController.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>