        <item name="colorPrimary">@color/blueA100</item>
        <item name="colorPrimaryVariant">@color/blueA700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal200</item>
